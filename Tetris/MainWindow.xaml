        </Canvas>
        <Label x:Name="score_lbl" Content="SCORE" HorizontalAlignment="Left" Margin="441,76,0,0" VerticalAlignment="Top" Width="75" FontSize="21.333"/>
        <Label x:Name="level_lbl" Content="LEVEL" HorizontalAlignment="Left" Margin="351,76,0,0" VerticalAlignment="Top" Width="64" FontSize="21.333"/>
        <TextBox x:Name="level_txt" HorizontalAlignment="Left" Height="48" Margin="351,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64" FontSize="32" SelectionOpacity="-17" TextAlignment="Center" IsReadOnly="True"/>
        <TextBox x:Name="score_txt" HorizontalAlignment="Left" Height="32" Margin="441,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" FontSize="21.333" TextAlignment="Center" IsReadOnly="True"/>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="670">
            <MenuItem FontSize="17" Header="File">
                <MenuItem Header="Save" Click="save_btn_Click"/>
                <MenuItem Header="Load" Click="load_btn_Click"/>
            </MenuItem>
        </Menu>
        <Button x:Name="start_btn" Content="Start" HorizontalAlignment="Left" Margin="376,289,0,0" VerticalAlignment="Top" Width="73" Height="75" FontSize="29.333" Click="start_btn_Click"/>
        <Button x:Name="pause_btn" Content="Pause" HorizontalAlignment="Left" Margin="376,398,0,0" VerticalAlignment="Top" Width="73" Height="75" FontSize="26.667" Click="pause_btn_Click"/>


